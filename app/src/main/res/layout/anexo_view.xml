<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="385dp"
    android:layout_height="90dp"
    android:gravity="center"
    android:background="@drawable/retangulo_resumo"
    android:clipToOutline="true"
    >

    <TextView
        android:id="@+id/tituloAnexo"
        style="@style/nunito_semibold"
        android:layout_width="305dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="TÃ­tulo do Anexo"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="22dp"
        android:autoSizeMinTextSize="13dp"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editarAnexo"
        android:elevation="100dp"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tituloAnexo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tituloAnexo"
        app:srcCompat="@drawable/editar" />

</androidx.constraintlayout.widget.ConstraintLayout>