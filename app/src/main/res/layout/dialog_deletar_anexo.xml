<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/desejaRemoverAnexo"
        style="@style/nunito_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Deseja remover esse anexo?"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cancelarRemoverAnexo"
        style="@style/nunito_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:text="Cancelar"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/confirmarRemoverAnexo"
        app:layout_constraintEnd_toStartOf="@+id/confirmarRemoverAnexo"
        app:layout_constraintTop_toTopOf="@+id/confirmarRemoverAnexo" />

    <TextView
        android:id="@+id/confirmarRemoverAnexo"
        style="@style/nunito_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:text="Remover"
        android:textColor="@color/azul"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desejaRemoverAnexo" />

</androidx.constraintlayout.widget.ConstraintLayout>