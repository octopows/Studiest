<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_principal"
    tools:context=".verificar_email">

    <TextView
        android:id="@+id/TextoInstrucao"
        android:layout_width="365dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_regular"
        android:letterSpacing="0.01"
        android:text="Um email para recuperar sua senha foi enviado para:"
        android:textAlignment="center"
        android:textColor="@color/cinza_hint"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VerifiqueEmail" />

    <TextView
        android:id="@+id/emailInserido"
        android:layout_width="365dp"
        android:layout_height="39dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/nunito_semibold"
        android:letterSpacing="0.01"
        android:text="david@gmail.com"
        android:textAlignment="center"
        android:textColor="#323232"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextoInstrucao" />

    <TextView
        android:id="@+id/VerifiqueEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/righteous"
        android:text="Verifique seu Email"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadeadoGrande" />

    <ImageView
        android:id="@+id/btnVoltarEspecial"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002"
        app:srcCompat="@drawable/icon_retornar" />

    <ImageView
        android:id="@+id/cadeadoGrande"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cadeado_grande" />

</androidx.constraintlayout.widget.ConstraintLayout>