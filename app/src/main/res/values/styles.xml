<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="nunito_nav" parent="android:Widget.TextView">
        <item name="android:textColor">@color/cinza_hint</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="nunito_bold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="nunito_regular" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:letterSpacing">0.01</item>
    </style>


    <style name="nunito_semibold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="legendaTopo" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/righteous</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="campoTexto" parent="android:Widget.EditText">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/cinza_hint</item>
        <item name="android:textColorHint">@color/cinza_hint</item>
        <item name="android:ems">10</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

</resources>